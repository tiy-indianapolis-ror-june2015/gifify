<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="myModalLabel">An awesome Doctor Who gif!</h4>
</div>
<div class="modal-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <% if @gif.file.blank? %>
          <%= link_to image_tag(@gif.image_url, :class => "img-responsive center-block"), gif_path(@gif), "data-toggle" => "modal", "data-target" => "#defaultModal" %>
        <% else %>
          <%= link_to image_tag(attachment_url(@gif, :file), :class => "img-responsive center-block"), gif_path(@gif), "data-toggle" => "modal", "data-target" => "#defaultModal" %>
        <% end %>
      </div>
    </div>
    <div class="row" id="photo_meta">
      <%= render :partial => "photo_meta", :locals => {:gif => @gif} %>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <p><%= @gif.tags.collect{|tag| link_to tag.name, gifs_path(:tag => tag.name), remote:true }.join(", ").html_safe %></p>
      </div>
    </div>
  </div>
</div>
<div class="modal-footer">
</div>
